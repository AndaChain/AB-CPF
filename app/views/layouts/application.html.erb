<!DOCTYPE html>
<html>
  <head>
    <title>ABCpf</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  
 
  <% if flash[:alert] %>
    <div class="alert">
    <p #error.manage><%= flash[:alert] %></p>
    </div>
	<% elsif flash[:error] %>
    <div class="alert">
    <p #error.manage><%= flash[:error] %></p>
    </div>
 	<% end %>

  <%= yield %>
    
  </body>
</html>
