<html>

<h3 class = "hblue">
 <%= @current_user.first  %> 
</h3>

<h1>Manage Department</h1>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

<%= button_to "Log out", logout_path, class: 'btn logoutbtn', method: "delete" %>

<div class="box"></div>
<div class="depcol" style= "--department: <%= @select_department.count%>">
<% @all_department.each do |a| %>
  
  <h2>
    <%= button_to  "Edit", manage_path(a[0], DateTime.now.strftime("%Y-%m-%d")), class: 'btn editbtn', method: "get" , id: "#{a[0]}"%>
    <%= "Department " + Department.find_by(code: a[0]).name%>  
    <br>
    <%=a[1]%>
  </h2>
<% end %>

</div>

</html>
