<table  align ="center">

  <thead>
    <tr>  
      <th>ID</th>
      <th>Name</th>
      <th>Last Name</th>
      <th> <div   align ="center" >Select All <input type = "checkbox" id = "se-all" class = 'largerCheckbox_pop'></input></div> </th>
    </tr>
  </thead>

  <tbody id="pop_table">
  <% @shiftNil.each.with_index(1) do |a| %> 
  <tr id=<%=a.id_e + "pop"%>>  
      <td> <%= a.id_e %> </td>
      <td> <%= a.first %> </td>
      <td> <%= a.last %> </td>
      <td> <div   align ="center" > <%= check_box_tag "add", [a.id_e, a.first, a.last, a.ot_plan], false, class: 'largerCheckbox_pop' %> </div> </td>
  </tr>

  <% end %>
  
  </tbody>

</table>




