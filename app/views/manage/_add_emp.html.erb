<html>

<div align ="right"><input type="time" id="start"> - <input type="time" id="end"> <button class = "btn submitbtn" id="Assign_emp_id">Add Employees</button></div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>


  <script type="text/javascript">
    $(document).ready(function(){
    $('#se-all').click(function(){
    $(".largerCheckbox_pop").prop('checked',$(this).prop('checked'));
    });  
    });
