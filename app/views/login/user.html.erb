<html>
<h1>Welcome to Time Attendance</h1>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

<%= form_with url: "/login", method: :post do |form| %>
	<div class="loginput">
	UserID:
	<%= form.text_field :user_name%>
	<br></br>
	
	Password:
	<%= form.password_field :password %>
	<br></br>

	<%= form.submit "Log in", class: 'btn loginbtn', id: "submit" %>
	<br></br>
	<div>
	
<% end %>

<script>
$("#submit").click(function(){
	alert( "<%= flash[:alert] %>" + "<%= flash[:error] %>" );
})
</script>
</html>
